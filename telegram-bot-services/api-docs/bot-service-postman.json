{
  "info": {
    "_postman_id": "b1a2c3d4-e5f6-4a5b-8c9d-0e1f2a3b4c5d",
    "name": "Telegram 机器人服务 API",
    "description": "Telegram 机器人服务的API接口集合，用于处理Telegram机器人的Webhook更新。",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "item": [
    {
      "name": "处理Webhook更新",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          }
        ],
        "url": {
          "raw": "{{bot_service_url}}/webhook/{{bot_token}}",
          "host": ["{{bot_service_url}}"],
          "path": ["webhook", "{{bot_token}}"]
        },
        "description": "处理来自Telegram的Webhook更新，需要在路径中提供机器人的token。",
        "body": {
          "mode": "raw",
          "raw": "\n{\n  \"update_id\": 123456789,\n  \"message\": {\n    \"message_id\": 123,\n    \"from\": {\n      \"id\": 12345678,\n      \"is_bot\": false,\n      \"first_name\": \"User\",\n      \"username\": \"username\",\n      \"language_code\": \"en\"\n    },\n    \"chat\": {\n      \"id\": 12345678,\n      \"first_name\": \"User\",\n      \"username\": \"username\",\n      \"type\": \"private\"\n    },\n    \"date\": 1631234567,\n    \"text\": \"/help\"\n  }\n}\n",
          "options": {
            "raw": {
              "language": "json"
            }
          }
        }
      },
      "response": []
    }
  ],
  "event": [],
  "variable": [
    {
      "key": "bot_service_url",
      "value": "http://localhost:8081",
      "type": "string"
    },
    {
      "key": "bot_token",
      "value": "YOUR_BOT_TOKEN",
      "type": "string"
    }
  ]
}