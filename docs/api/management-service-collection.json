  "item": [
    {
      "name": "搜索接口",
      "request": {
        "method": "GET",
        "header": [],
        "url": {
          "raw": "{{management_service_url}}/api/search?q={{query}}&page={{page}}&limit={{limit}}&filter={{filter}}",
          "host": ["{{management_service_url}}"],
          "path": ["api", "search"],
          "query": [
            {"key": "q", "value": "{{query}}", "description": "搜索查询关键词"},
            {"key": "page", "value": "{{page}}", "description": "页码，从1开始"},
            {"key": "limit", "value": "{{limit}}", "description": "每页结果数量"},
            {"key": "filter", "value": "{{filter}}", "description": "过滤类型：group(群组)、channel(频道)、bot(机器人)或all(全部)"}
          ]
        },
        "description": "搜索接口，支持分页和过滤功能。"
      },
      "response": []
    },
    {
      "name": "获取搜索建议",
